<h1>To Do App</h1>
<h3>An Easy and Efficient Task Manager</h3>

<form class="form" action="/todoList" method="POST">
    <input name="task" autocomplete="off" placeholder="Add a task..." required />
    <button class="btn">Add</button>
</form>

<div class="container">
    <ul class="list">
        {{#each taskList}}
        <li>
            <span class="list-item">{{this}}</span>
            <button class="edit">Edit</button>
            <button class="delete">Delete</button>
        </li>
        {{/each}}
    </ul>
</div>